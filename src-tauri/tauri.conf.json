{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "capcut-clone",
  "version": "0.1.0",
  "identifier": "com.nosenfield.capcut-clone",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1520",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CapCut Clone - Video Editor",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "resources": [
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "infoPlist": "./Info.plist"
    }
  }
}